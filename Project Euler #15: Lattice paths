#include <iostream>

using namespace std;

int main()
{
    int a[501][501],i,j,m=1000000007;
    for(i=0;i<501;i++)
        a[i][0]=1%m;
     for(i=0;i<501;i++)
        a[0][i]=1%m;
        for(i=1;i<500;i++){
            for(j=1;j<500;j++){
                a[i][j]=(a[i-1][j]+a[i][j-1])%m;
                }
        }
        int t;
        cin>>t;
        while(t--){
        int m,n;
        cin>>m>>n;


        cout<<a[m][n]<<endl;
        }

    return 0;
}
